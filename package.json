{
  "name": "exe-launcher-simple",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir",
    "build-portable": "electron-builder --win portable",
    "pack": "npx @electron/packager . EXE_Launcher --platform=win32 --arch=x64 --out=dist --overwrite --prune --ignore=node_modules --ignore=dist --ignore=.git --ignore=.vscode --asar",
    "pack-min": "npx @electron/packager . EXE_Launcher --platform=win32 --arch=x64 --out=dist --overwrite --prune --ignore=node_modules --ignore=dist --ignore=.git --ignore=.vscode --asar --no-deref-symlinks"
  },
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "electron": "^9.4.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.exelauncher.simple",
    "productName": "EXE Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "package.json"
    ],
    "asar": true,
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "portable": {
      "artifactName": "EXE_Launcher.exe"
    }
  }
}
